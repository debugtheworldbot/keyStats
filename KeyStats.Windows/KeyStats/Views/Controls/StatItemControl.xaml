<UserControl x:Class="KeyStats.Views.Controls.StatItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Height="28">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="IconText" Grid.Column="0"
                   FontSize="16" VerticalAlignment="Center"
                   Width="24"/>

        <TextBlock x:Name="TitleText" Grid.Column="1"
                   FontSize="13" VerticalAlignment="Center"
                   Margin="4,0,0,0"/>

        <TextBlock x:Name="ValueText" Grid.Column="2"
                   FontSize="14" FontWeight="SemiBold"
                   Foreground="#0078D4" FontFamily="Consolas"
                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
