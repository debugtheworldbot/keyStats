<UserControl x:Class="KeyStats.Views.Controls.StatItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Icon -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                Background="{StaticResource SubtleFillBrush}"
                CornerRadius="5" Width="32" Height="32"
                VerticalAlignment="Center" Margin="0,0,10,0">
            <TextBlock x:Name="IconText"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="14"
                       Foreground="{StaticResource AccentBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Title -->
        <TextBlock x:Name="TitleText" Grid.Row="0" Grid.Column="1"
                   FontSize="11"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   VerticalAlignment="Bottom"/>

        <!-- Value -->
        <TextBlock x:Name="ValueText" Grid.Row="1" Grid.Column="1"
                   FontSize="17" FontWeight="SemiBold"
                   Foreground="{StaticResource TextPrimaryBrush}"
                   VerticalAlignment="Top" Margin="0,1,0,0"/>
    </Grid>
</UserControl>
