<UserControl x:Class="KeyStats.Views.Controls.KeyBreakdownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:KeyStats.ViewModels"
             MinHeight="24">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Column 1 -->
        <ItemsControl x:Name="Column1" Grid.Column="0">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type viewmodels:KeyCountItem}">
                    <Grid Height="22" Margin="0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="{StaticResource SubtleFillBrush}"
                                CornerRadius="4" Padding="6,2"
                                HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Key}" FontSize="11" FontWeight="Medium"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       MaxWidth="45" TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding Key}"/>
                        </Border>
                        <TextBlock Grid.Column="1" Text="{Binding Count}"
                                   FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Column 2 -->
        <ItemsControl x:Name="Column2" Grid.Column="2">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type viewmodels:KeyCountItem}">
                    <Grid Height="22" Margin="0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="{StaticResource SubtleFillBrush}"
                                CornerRadius="4" Padding="6,2"
                                HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Key}" FontSize="11" FontWeight="Medium"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       MaxWidth="45" TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding Key}"/>
                        </Border>
                        <TextBlock Grid.Column="1" Text="{Binding Count}"
                                   FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Column 3 -->
        <ItemsControl x:Name="Column3" Grid.Column="4">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type viewmodels:KeyCountItem}">
                    <Grid Height="22" Margin="0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="{StaticResource SubtleFillBrush}"
                                CornerRadius="4" Padding="6,2"
                                HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Key}" FontSize="11" FontWeight="Medium"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       MaxWidth="45" TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding Key}"/>
                        </Border>
                        <TextBlock Grid.Column="1" Text="{Binding Count}"
                                   FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Empty State -->
        <TextBlock x:Name="EmptyText" Grid.ColumnSpan="5"
                   Text="暂无按键记录"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="12"
                   Foreground="{StaticResource TextTertiaryBrush}"
                   Visibility="Collapsed"/>
    </Grid>
</UserControl>
