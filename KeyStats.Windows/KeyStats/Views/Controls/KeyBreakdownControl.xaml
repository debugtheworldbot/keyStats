<UserControl x:Class="KeyStats.Views.Controls.KeyBreakdownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:KeyStats.ViewModels"
             Height="124">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Column 1 -->
        <ItemsControl x:Name="Column1" Grid.Column="0">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type viewmodels:KeyCountItem}">
                    <Grid Height="20" Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#20808080" BorderBrush="#40808080"
                                BorderThickness="1" CornerRadius="3" Padding="4,1"
                                HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Key}" FontSize="11" FontWeight="Medium"
                                       MaxWidth="50" TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding Key}"/>
                        </Border>
                        <TextBlock Grid.Column="1" Text="{Binding Count}"
                                   FontSize="11" FontWeight="SemiBold" FontFamily="Consolas"
                                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Separator 1 -->
        <Rectangle Grid.Column="1" Width="1" Fill="#30808080" Margin="6,0"/>

        <!-- Column 2 -->
        <ItemsControl x:Name="Column2" Grid.Column="2">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type viewmodels:KeyCountItem}">
                    <Grid Height="20" Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#20808080" BorderBrush="#40808080"
                                BorderThickness="1" CornerRadius="3" Padding="4,1"
                                HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Key}" FontSize="11" FontWeight="Medium"
                                       MaxWidth="50" TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding Key}"/>
                        </Border>
                        <TextBlock Grid.Column="1" Text="{Binding Count}"
                                   FontSize="11" FontWeight="SemiBold" FontFamily="Consolas"
                                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Separator 2 -->
        <Rectangle Grid.Column="3" Width="1" Fill="#30808080" Margin="6,0"/>

        <!-- Column 3 -->
        <ItemsControl x:Name="Column3" Grid.Column="4">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type viewmodels:KeyCountItem}">
                    <Grid Height="20" Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#20808080" BorderBrush="#40808080"
                                BorderThickness="1" CornerRadius="3" Padding="4,1"
                                HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Key}" FontSize="11" FontWeight="Medium"
                                       MaxWidth="50" TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding Key}"/>
                        </Border>
                        <TextBlock Grid.Column="1" Text="{Binding Count}"
                                   FontSize="11" FontWeight="SemiBold" FontFamily="Consolas"
                                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Empty State -->
        <TextBlock x:Name="EmptyText" Grid.ColumnSpan="5"
                   Text="No key presses recorded yet"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                   Visibility="Collapsed"/>
    </Grid>
</UserControl>
